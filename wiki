#!/usr/bin/env bash

PAGE=${1:-Walrus}

# first sentence
print_fst_sen() {
    # extract "explaintext" (first few paragraphs from an article)
    local explain_raw=$(curl -s "https://en.wikipedia.org/w/api.php?action=query&prop=extracts&titles=$PAGE&format=json&exintro&explaintext" | jq -r '.query.pages | to_entries | .[0].value.extract' | head -n 1)

    # remove quotes & get first sentence (until first dot)
    local fst_sen=$(sed -e 's/\..*//' <<< $explain_raw)

    printf "%s\n" "$fst_sen."
}

print_sections() {
    # get section name list
    mapfile -t sections < <(curl -s "https://en.wikipedia.org/w/api.php?action=parse&page=$PAGE&format=json&prop=sections" | jq -r '.parse.sections[].line')

    echo -e "sections:"

    for section in "${sections[@]}"; do
        printf '%s %s\n' '-' "$section"
    done
}

print_fst_sen
printf "\n" ""
print_sections
